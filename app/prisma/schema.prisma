generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User{
  id        String @id @default(uuid())
  name      String
  email     String @unique
  provider  Providers
  role      Role
  streamer  Streamer[]
  upvotes   UpVotes[]
}

model Streamer {
  id            String @id @default(uuid())
  type          StreamType
  url           String
  extractedId   String
  userId        String
  active        Boolean  @default(false)
  upvotes       UpVotes[]
  user          User @relation(fields: [userId],references: [id],onDelete: Cascade)
}

model UpVotes{
  id      String @id @default(uuid())
  userId  String
  streamId  String
  user     User @relation(fields: [userId],references: [id],onDelete: Cascade)
  streamer  Streamer @relation(fields: [streamId],references: [id],onDelete: Cascade)
  @@unique([userId,streamId])
}


enum Role{
  Streamer
  Creator
}

enum StreamType{
  spotify
  youtube
}

enum Providers{
  Google
}
